
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)  
  isVerified Boolean  @default(false)
  verificationToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model GalleryImg {
  id        Int           @id @default(autoincrement())
  title     String
  date      DateTime
  files     GalleryFile[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model GalleryFile {
  id           Int       @id @default(autoincrement())
  fileName     String
  filePath     String
  galleryImgId Int
  galleryImg   GalleryImg @relation(fields: [galleryImgId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Image {
  id        Int      @id @default(autoincrement())
  filename  String   @unique
  path      String
  mimetype  String
  size      Int
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NoticeImage {
  id         Int      @id @default(autoincrement())
  title      String
  category   String
  image      String
 uploadTime DateTime @default(now())
}

model NoticePdf {
  id         Int      @id @default(autoincrement())
  title      String
  category   String
  pdf        String
  uploadTime DateTime @default(now())  
}